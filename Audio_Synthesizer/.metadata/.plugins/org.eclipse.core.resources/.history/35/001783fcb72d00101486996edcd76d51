#ifndef SINE_GENERATOR_H
#define SINE_GENERATOR_H

#include "arm_math.h"  // Needed for arm_sin_f32
#include <stdio.h>     // Needed for perror
#include <math.h>      // Needed for PI

#define SAMPLE_RATE     96000  // 96kHz
#define FREQUENCY       500    // 500Hz
#define BUFFER_SIZE     (SAMPLE_RATE / FREQUENCY)

#define BIT24_MAX 16777215
#define BIT30_MAX 0x3FFFFFFF

int generate_sine_wave_f(float *sine_wave_f, float amplitude_f, int frequency, int sample_rate);

#endif // SINE_GENERATOR_H
